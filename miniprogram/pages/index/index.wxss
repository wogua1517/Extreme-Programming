.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

.search-box {
  width: 82%;
  margin-bottom: 16rpx;
}

.search-box input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  box-sizing: border-box;
  font-size: 26r px;
  background: white;
  text-align: center;
  height:80rpx;
}

.group-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}

.group-filter button {
  padding: 0rpx 28rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #333;
  border: none;
  border-radius: 16rpx;
  min-width: 60rpx;
  max-width: 110rpx;
  height: 60rpx;
}

.group-filter .active {
  background: #06456e;
  color: white;
}

/* ========== 联系人列表 ========== */

.contact-list {
  padding-left: 20rpx;
  padding-right: 80rpx;
  width: 74%;
  margin: 0 auto;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0; /* 防止被压缩 */
}

.info {
  flex: 1;
  overflow: hidden;
  min-width: 0; /* 关键：允许子元素溢出省略 */
}

.name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.phone {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group {
  font-size: 22rpx;
  color: #999;
}

/* 新增：收藏星标按钮 */
.favorite-btn {
  position: absolute;
  right: 120rpx; /* 原为 20rpx，现在留出星标+间距空间 */
  top: 25;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 12rpx;
  flex-shrink: 0;
}

.star {
  font-size: 36rpx;
  color: #ccc; /* 未收藏：灰色 */
  line-height: 1;
}

.star.star-filled {
  color: #ffcc00; /* 已收藏：金色 */
}

/* 删除按钮：向左移动，为星标留空间 */
.delete-btn {
  position: absolute;
  right: 20rpx; /* 原为 20rpx，现在留出星标+间距空间 */
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  background: #f44336;
  color: white;
  border-radius: 16rpx;
  min-width: 50rpx;
}

.export-btn {
  position: fixed;
  bottom: 80rpx;
  right: 30rpx;
  width: 90rpx;
  height: 90rpx;
  background: #07c160;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.15);
  z-index: 999;
  line-height: 1.2;
}

.fab {
  position: fixed;
  right: 30rpx;          /* 距离右侧距离 */
  bottom: 200rpx;         /* 距离底部距离 */
  width: 100rpx;         /* 圆形按钮直径 */
  height: 100rpx;
  border-radius: 50%;    /* 圆形 */
  background-color: #07c160; /* 微信绿，可自定义 */
  color: white;
  font-size: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15); /* 可选：添加阴影 */
  z-index: 999;          /* 确保在最上层 */
}