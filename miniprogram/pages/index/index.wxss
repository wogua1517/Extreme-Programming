.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

.search-box {
  width: 82%;
  margin-bottom: 16rpx;
}

.search-box input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  box-sizing: border-box;
  font-size: 26r px;
  background: white;
  text-align: center;
  height:80rpx;
}

.group-filter {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: flex-start;
  margin-bottom: 20rpx;
}

.group-filter button {
  padding: 0rpx 28rpx;
  font-size: 24rpx;
  background: #f0f0f0;
  color: #333;
  border: none;
  border-radius: 16rpx;
  min-width: 60rpx;
  max-width: 110rpx;
  height: 60rpx;
}

.group-filter .active {
  background: #06456e;
  color: white;
}

.contact-list {
  padding-left: 20rpx;
  padding-right: 80rpx;
  width:74%;
  margin: 0 auto;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 16rpx 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  width: 100%;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.info {
  flex: 1;
  overflow: hidden;
}

.name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.phone {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group {
  font-size: 22rpx;
  color: #999;
}

.delete-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  background: #f44336;
  color: white;
  border-radius: 16rpx;
  min-width: 50rpx;
}

.empty {
  text-align: center;
  color: #999;
  padding: 80rpx 0;
  font-size: 26rpx;
}

.fab {
  position: fixed;
  bottom: 150rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: #06456e;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.refresh-btn {
  position: fixed;
  bottom: 280rpx;
  right: 40rpx;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f0f0f0;
  color: #666;
  padding: 12rpx 12rpx;
  border-radius: 50%;
  font-size: 22rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  z-index: 999;
}

.refresh-icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.refresh-btn:active {
  background: #e0e0e0;
}